@page
@model InfoSecReports.Pages.EventOfObjects.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Имя организации
            </th>
            <th>
                Имя мероприятия
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EventOfObject) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfEvent)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
