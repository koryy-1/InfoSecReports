@page
@model InfoSecReports.Pages.EventOfObjects.CreateModel

@{
    ViewData["Title"] = "Create";
}



<h1>Добавить:</h1>

<h4>Мероприятие по проверке объекта</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Имя организации</label>
                <input asp-for="EventOfObject.NameOfCompany" value="@Model.NameOfCompany" class="form-control" readonly/>
                <span asp-validation-for="EventOfObject.NameOfCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Имя мероприятия</label>
                <select class="form-select" asp-for="EventOfObject.NameOfEvent" required>
                    @{
                        foreach (var item in Model.Event)
                        {
                            <option value=@item.Name>@Html.DisplayFor(modelItem => item.Name)</option>
                        }
                    }
                </select>
                <span asp-validation-for="EventOfObject.NameOfEvent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
