@page
@model InfoSecReports.Pages.FlawOfObjects.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить:</h1>

<h4>Недостаток объекта проверки</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Имя организации</label>
                <input asp-for="FlawOfObject.NameOfCompany" value="@Model.NameOfCompany" class="form-control" />
                <span asp-validation-for="FlawOfObject.NameOfCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Имя недостатка</label>
                <select asp-for="FlawOfObject.NameOfFlaw" class="form-select" aria-label="Выберите мероприятие" required>
                    @{
                        foreach (var item in Model.Flaw)
                        {
                            <option value=@item.Name>@Html.DisplayFor(modelItem => item.Name)</option>
                        }
                    }
                </select>
                <span asp-validation-for="FlawOfObject.NameOfFlaw" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
