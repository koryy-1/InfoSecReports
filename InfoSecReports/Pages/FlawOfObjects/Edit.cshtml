@page
@model InfoSecReports.Pages.FlawOfObjects.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать:</h1>

<h4>Недостаток в защите</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FlawOfObject.Id" />
            <div class="form-group">
                <label>Имя организации</label>
                <input asp-for="FlawOfObject.NameOfCompany" class="form-control" />
                <span asp-validation-for="FlawOfObject.NameOfCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Имя недостатка</label>
                <input asp-for="FlawOfObject.NameOfFlaw" class="form-control" />
                <span asp-validation-for="FlawOfObject.NameOfFlaw" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Обновить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
