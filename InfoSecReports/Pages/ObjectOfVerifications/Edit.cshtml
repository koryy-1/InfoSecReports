@page
@model InfoSecReports.Pages.ObjectOfVerifications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать:</h1>

<h4>Объект проверки</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ObjectOfVerification.Name" />
            <div class="form-group">
                <label class="control-label">Адрес</label>
                <input asp-for="ObjectOfVerification.Adress" class="form-control" />
                <span asp-validation-for="ObjectOfVerification.Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Описание</label>
                <input asp-for="ObjectOfVerification.Description" class="form-control" />
                <span asp-validation-for="ObjectOfVerification.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дата начала мероприятий</label>
                <input asp-for="ObjectOfVerification.DateOfStart" class="form-control" />
                <span asp-validation-for="ObjectOfVerification.DateOfStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дата окончания</label>
                <input asp-for="ObjectOfVerification.DateOfEnd" class="form-control" />
                <span asp-validation-for="ObjectOfVerification.DateOfEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Примечания</label>
                <input asp-for="ObjectOfVerification.Notes" class="form-control" />
                <span asp-validation-for="ObjectOfVerification.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Обновить" class="btn btn-success" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="d-grid col-6 text-center">
            <a class="btn btn-secondary" asp-page="/ScriptOfObjects/Create" asp-route-id="@Model.ObjectOfVerification.Name">Добавить сценарий проверки</a><br /><br />
            <a class="btn btn-secondary" asp-page="/ObjectOfVerifications/Report" asp-route-id="@Model.ObjectOfVerification.Name">Добавить мероприятия и недостатки по защите</a><br /><br />
            <a class="btn btn-secondary" asp-page="/WorkingGroups/Create" asp-route-id="@Model.ObjectOfVerification.Name">Добавить состав рабочей группы</a><br /><br />
            <a class="btn btn-secondary" asp-page="/Achievements/Create" asp-route-id="@Model.ObjectOfVerification.Name">Добавить достижение</a><br /><br />
        </div>
        
    </div>
 </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
