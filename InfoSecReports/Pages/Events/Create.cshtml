@page
@model InfoSecReports.Pages.Events.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Создать:</h1>

<h4>Мероприятие</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Имя мероприятия</label>
                <input asp-for="Event.Name" class="form-control" required/>
                <span asp-validation-for="Event.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Содержание</label>
                <input asp-for="Event.Content" class="form-control" />
                <span asp-validation-for="Event.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Коэффициент значимости</label>
                <input asp-for="Event.ImportanceFactor" class="form-control" />
                <span asp-validation-for="Event.ImportanceFactor" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label>Категория</label>
                <select asp-for="Event.CategoryName" class="form-select" aria-label="Выберите мероприятие" required>
                    @{
                        foreach (var item in Model.Category)
                        {
                            <option value=@item.Name>@Html.DisplayFor(modelItem => item.Name)</option>
                        }
                    }
                </select>
                <span asp-validation-for="Event.CategoryName" class="text-danger"></span>
                <br/><a class="btn btn-secondary" asp-page="/Categories/Create">Добавить категорию</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
