@page
@model InfoSecReports.Pages.Events.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать:</h1>

<h4>Мероприятие</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <div class="form-group">
                <label>Имя</label>
                <input asp-for="Event.Name" class="form-control" readonly/>
                <span asp-validation-for="Event.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Содержание</label>
                <input asp-for="Event.Content" class="form-control" />
                <span asp-validation-for="Event.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Коэффициент значимости</label>
                <input asp-for="Event.ImportanceFactor" class="form-control" />
                <span asp-validation-for="Event.ImportanceFactor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Категория</label>
                <input asp-for="Event.CategoryName" class="form-control" />
                <span asp-validation-for="Event.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Обновить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
